<dl class="portlet portletTORStatistical"
    i18n:domain="ilo.statistics">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        TOR Statistical
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem">
    <div>
    <h3>Total TOR's available</h3>
    <span tal:content="view/total_tor"/>
    </div>

    <div>
    <h3>Areas of work</h3>
    <ul tal:repeat="item python: view.get_data('ilo_themes')">
        <li tal:content="item"></li>
    </ul>
    </div>

    <div>
    <h3>Geographical Assignments</h3>
    <ul tal:repeat="item python: view.get_data('ilo_regions')">
        <li tal:content="item"></li>
    </ul>
    </div>
    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
